{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["node"],
      "rangeStrategy": "pin"
    },
    {
      "matchManagers": [
        "npm"
      ],
      "groupName": "all npm dependencies",
      "schedule": [
        "on monday at 10:00am"
      ]
    },
    {
      "matchPackageNames": [
        "@playcanvas/attribute-parser",
        "@playcanvas/eslint-config",
        "@playcanvas/observer",
        "@playcanvas/pcui",
        "@playcanvas/pcui-graph"
      ],
      "groupName": "internal @playcanvas dependencies",
      "schedule": [
        "at any time"
      ]
    },
    {
      "matchDepTypes": ["devDependencies"],
      "rangeStrategy": "pin"
    },
    {
      "matchDepTypes": ["dependencies"],
      "rangeStrategy": "widen"
    }
  ]
}
