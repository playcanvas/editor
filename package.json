{
  "name": "@playcanvas/editor",
  "version": "2.3.1",
  "author": "PlayCanvas <support@playcanvas.com>",
  "homepage": "https://playcanvas.com",
  "description": "The PlayCanvas Editor Frontend",
  "keywords": [
    "editor",
    "html5",
    "javascript",
    "pcui",
    "playcanvas",
    "webgl",
    "webgpu",
    "webxr"
  ],
  "license": "MIT",
  "main": "js/editor/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.20.0"
  },
  "bugs": {
    "url": "https://github.com/playcanvas/editor/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/playcanvas/editor.git"
  },
  "browserslist": [
    ">0.3%, defaults"
  ],
  "scripts": {
    "lint:css": "stylelint sass",
    "lint:js": "eslint src",
    "lint": "npm run lint:css && npm run lint:js",
    "type:check": "tsc",
    "build:css": "node compile-sass.mjs",
    "build:js": "cross-env NODE_ENV=production rollup -c",
    "build": "npm run build:css && npm run build:js",
    "watch:css": "nodemon compile-sass.mjs -w sass -e .scss -q",
    "watch:js": "rollup -c -w",
    "watch": "concurrently --kill-others \"npm run watch:css\" \"npm run watch:js\"",
    "serve": "serve dist -p 3487 --cors",
    "develop": "concurrently --kill-others \"npm run watch:css\" \"npm run watch:js\" \"npm run serve\"",
    "test": "mocha"
  },
  "devDependencies": {
    "@jsquash/avif": "1.3.0",
    "@jsquash/jpeg": "1.4.0",
    "@jsquash/png": "2.2.0",
    "@jsquash/webp": "1.4.0",
    "@playcanvas/editor-api": "^1.1.24",
    "@playcanvas/eslint-config": "2.0.7",
    "@playcanvas/observer": "^1.6.6",
    "@playcanvas/pcui": "4.6.0",
    "@playcanvas/pcui-graph": "4.0.1",
    "@rollup/plugin-commonjs": "28.0.1",
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-node-resolve": "15.3.0",
    "@rollup/plugin-replace": "6.0.1",
    "@rollup/plugin-swc": "0.4.0",
    "@swc/core": "1.9.2",
    "@typescript-eslint/parser": "^8.35.1",
    "autoprefixer": "10.4.20",
    "chai": "^5.1.2",
    "concurrently": "9.1.0",
    "cross-env": "7.0.3",
    "dexie": "^4.0.10",
    "eslint": "9.32.0",
    "filenamify": "6.0.0",
    "highlight.js": "11.9.0",
    "markdown-it": "14.0.0",
    "mocha": "^11.1.0",
    "monaco-editor": "^0.47.0",
    "monaco-themes": "^0.4.2",
    "nodemon": "3.1.7",
    "ot-text": "github:playcanvas/ot-text",
    "postcss": "8.4.48",
    "rollup": "4.25.0",
    "rollup-plugin-copy": "3.5.0",
    "rollup-plugin-polyfill-node": "0.13.0",
    "sass-embedded": "1.80.6",
    "serve": "14.2.4",
    "sharedb": "3.2.1",
    "stylelint": "16.10.0",
    "stylelint-config-standard-scss": "13.1.0",
    "ts-node": "^10.9.2",
    "typescript": "5.6.3"
  },
  "dependencies": {
    "@playcanvas/attribute-parser": "^1.10.0"
  }
}
