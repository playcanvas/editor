    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@playcanvas/attribute-parser": "^1.10.1"
  },
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "node compile-sass.mjs",
    "build:js": "cross-env NODE_ENV=production rollup -c",
    "develop": "concurrently --kill-others \"npm run watch:css\" \"npm run watch:js\" \"npm run serve\"",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint sass",
    "lint:js": "eslint",
    "lint:js:fix": "eslint --fix",
    "serve": "serve dist -p 3487 --cors",
    "test": "mocha",
    "test:api": "rollup -c test/editor-api/rollup.test.config.mjs && karma start test/editor-api/karma.conf.cjs --single-run",
    "type:check": "tsc",
    "watch": "concurrently --kill-others \"npm run watch:css\" \"npm run watch:js\"",
    "watch:css": "nodemon compile-sass.mjs -w sass -e .scss -q",
    "build:js:dev": "node esbuild-dev.mjs",
    "watch:js": "node esbuild-dev.mjs --watch"
  },
  "engines": {
    "node": "22.22.0"
  }
}
