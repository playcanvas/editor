    "rollup-plugin-tsconfig-paths": "1.5.2",
    "sass-embedded": "1.97.3",
    "serve": "14.2.5",
    "sharedb": "3.3.2",
    "sinon": "17.0.1",
    "stylelint": "16.26.1",
