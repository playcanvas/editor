    "webgl",
    "webgpu",
    "webxr"
  ],
  "license": "MIT",
  "main": "js/editor/index.js",
  "type": "module",
  "bugs": {
    "url": "https://github.com/playcanvas/editor/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/playcanvas/editor.git"
  },
  "browserslist": [
    ">0.3%, defaults"
  ],
  "devDependencies": {
    "@jsquash/avif": "1.3.0",
    "@jsquash/jpeg": "1.6.0",
    "@jsquash/png": "2.2.0",
    "@jsquash/webp": "1.5.0",
    "@playcanvas/editor-api": "file:modules/editor-api",
    "@playcanvas/eslint-config": "2.1.0",
    "@playcanvas/observer": "1.7.1",
    "@playcanvas/pcui": "5.5.0",
    "@playcanvas/pcui-graph": "5.0.0",
    "@rollup/plugin-commonjs": "28.0.9",
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-node-resolve": "15.3.1",
    "@rollup/plugin-replace": "6.0.3",
    "@rollup/plugin-swc": "0.4.0",
    "@swc/core": "1.15.3",
    "@typescript-eslint/parser": "8.49.0",
    "@types/sharedb": "3.3.13",
    "autoprefixer": "10.4.22",
    "chai": "5.3.3",
    "concurrently": "9.2.1",
    "cross-env": "7.0.3",
    "dexie": "4.2.1",
    "eslint": "9.39.1",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "filenamify": "6.0.0",
    "highlight.js": "11.11.1",
    "markdown-it": "14.1.0",
    "mocha": "11.7.5",
    "monaco-editor": "0.47.0",
    "monaco-themes": "0.4.8",
    "nodemon": "3.1.11",
    "ot-text": "github:playcanvas/ot-text",
    "playcanvas": "2.14.3",
    "postcss": "8.5.6",
    "rollup": "4.53.3",
    "rollup-plugin-copy": "3.5.0",
    "rollup-plugin-dts": "6.3.0",
    "rollup-plugin-polyfill-node": "0.13.0",
    "rollup-plugin-tsconfig-paths": "1.5.2",
    "sass-embedded": "1.93.3",
    "serve": "14.2.5",
    "sharedb": "3.3.2",
    "stylelint": "16.26.1",
    "stylelint-config-standard-scss": "13.1.0",
    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@playcanvas/attribute-parser": "^1.10.1"
  },
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "node compile-sass.mjs",
    "build:js": "cross-env NODE_ENV=production rollup -c",
    "develop": "concurrently --kill-others \"npm run watch:css\" \"npm run watch:js\" \"npm run serve\"",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint sass",
    "lint:js": "eslint",
    "lint:js:fix": "eslint --fix",
    "serve": "serve dist -p 3487 --cors",
    "test": "mocha",
    "test:api": "cd modules/editor-api && npm test && cd -",
    "type:check": "tsc",
    "type:check:api": "tsc -p modules/editor-api/tsconfig.json --noEmit",
    "watch": "concurrently --kill-others \"npm run watch:css\" \"npm run watch:js\"",
    "watch:css": "nodemon compile-sass.mjs -w sass -e .scss -q",
    "watch:js": "rollup -c -w"
  },
  "engines": {
    "node": "22.21.1"
  }
}
